%li.dropdown
  %a{:href => "#", :class => "dropdown-toggle", :data => {:toggle => "dropdown"}}
    = block[:title]
    %b.caret
  %ul.dropdown-menu
    - block[:entries].each do |item|
      %li= link_to(item[:title], item[:href], :tabindex => '-1')
